<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityRegister">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="87dp"
            android:layout_height="112dp"
            android:id="@+id/imageView"
            android:background="@drawable/maybelogocolorlittle"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/maybecolorlittle_png"/>


        <EditText
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:hint="Name"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:layout_below="@+id/etName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="Password"
            android:layout_gravity="center_horizontal"
            android:inputType="none"/>

        <EditText
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:id="@+id/etMail"
            android:layout_below="@+id/etPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Email"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:id="@+id/etBirth"
            android:layout_below="@+id/etMail"
            android:layout_alignEnd="@+id/etMail"
            android:layout_alignParentStart="true"
            android:hint="dd/mm/yyyy"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/buttonRegister"
            android:layout_below="@+id/etBirth"
            android:layout_alignParentStart="true"
            android:background="@drawable/buttons_roundedrose"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>
